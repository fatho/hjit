      base >=4.7 && <5
    , bytestring
    , text
    , mtl
    , transformers
    , lens
  if os(linux)
    cpp-options: -DOS_Linux
  if os(darwin)
    cpp-options: -DOS_Darwin
  default-language: Haskell2010

executable hjit-exe
  hs-source-dirs:
      app
  main-is: Main.hs
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base
    , hjit
  default-language: Haskell2010

test-suite hjit-test
  type: exitcode-stdio-1.0
