extra-source-files:
    README.md

source-repository head
  type: git
  location: https://github.com/fatho/hjit

library
  hs-source-dirs:
      src
  ghc-options: -Wall
  exposed-modules:
      Lib
      HJit.CodeGen.AMD64
      HJit.CodeGen.AMD64.Types
      HJit.CodeGen.Assembler
      HJit.CodeGen.Assembler.Internal
      HJit.Memory
      HJit.Memory.Types
